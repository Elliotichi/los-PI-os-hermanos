<!DOCTYPE html>

<head>
    <script defer src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script defer src="/scripts/main.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Room Occupancy Search</title>
</head>

<body>
    <div id="main-container">
        <div id="header-container">
            <header>
                <nav class="navbar navbar-light bg-7b1a7b">
                    <a id="title" class="navbar-brand" href="/"><img src="../media/rgu_logo.png" id="sitelogo"></a>
                    <% if (loggedin) { %>
                        <a href="/report"><button class="room_button" id="btn_report" class="btn btn-outline-success"
                                type="button">Report</button></a>
                        <% } %>
                            </form>
                </nav>
            </header>
        </div>

        <div id="main-body-container">
            <div id="sidebar-container">
                <div id="sidebar">
                    <h2>Common Searches</h2>

                    <button id="btn_N9" class="room_button">N9</button>
                    <button id="btn_N533" class="room_button">N533</button>
                    <button id="btn_N527" class="room_button">N527</button>
                </div>
            </div>

            <div id="list-container">
                <ul id="report-list">
                    <% data.forEach(person=> { %>
                        <li class="report-person">
                            <%=person.first_name%> <%=person.last_name%> (<%=person.matriculation_no%>)
                            <input type="checkbox" class="report-checkbox">

                        </li>
                        <% }) %>
                </ul>

            </div>

        </div>
</body>

</html>